#!/usr/bin/env python3
import subprocess
from sys import argv


def main():
    client = subprocess.check_output(
        f"IAM_INSTANCE={argv[1]} OAUTH_CALLBACK=https://{argv[2]}:3000/login/generic_oauth dodas-IAMClientRec ml-client",
        shell=True,
    )
    lines = [line for line in client.decode("utf-8").split("\n") if line]

    with open("/usr/local/share/monitoring/grafana/config/custom.ini") as cur_config:
        cur_config_string = cur_config.read()

    cur_config_string = cur_config_string.replace(
        "CLIENT_ID", f'"{lines[-2].strip()}"'
    ).replace("CLIENT_SECRET", f'"{lines[-1].strip()}"')

    with open(
        "/usr/local/share/monitoring/grafana/config/custom.ini", "w"
    ) as cur_config:
        cur_config.write(cur_config_string)


if __name__ == "__main__":
    main()
