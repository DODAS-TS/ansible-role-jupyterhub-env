version: "3.9"

services:
  jupyterhub:
    depends_on:
      - http_proxy
    build: .
    command:
      - /opt/conda/bin/python
      - /opt/conda/bin/jupyterhub
      - --debug
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /usr/local/share/jupyterhub/cookies:/srv/jupyterhub/cookies
      - /usr/local/share/jupyterhub/db:/srv/jupyterhub/db
    environment:
      - OAUTH_ENDPOINT=https://iam.cloud.infn.it
      - OAUTH_CALLBACK_URL=https://{{server_ip}}:{{jupyter_port}}/hub/oauth_callback
      - OAUTH_GROUPS=group1 group2
      - {{jupyter_gpu}}

  http_proxy:
    image: jupyterhub/configurable-http-proxy
    command:
      - configurable-http-proxy
      - --ip=0.0.0.0
      - --port={{jupyter_port}}
      - --api-ip=0.0.0.0
      - --api-port=8001
      - --default-target=http://jupyterhub:8088
      - --error-target=http://jupyterhub:8088/hub/error
      - --ssl-key=/tmp/certs/jupyter/hostcert.key
      - --ssl-cert=/tmp/certs/jupyter/hostcert.pem
    volumes:
      - /tmp/certs/jupyter:/tmp/certs/jupyter
    environment:
      - CONFIGPROXY_AUTH_TOKEN={{jupyter_proxy_token}}
    ports:
      - {{jupyter_port}}:{{jupyter_port}}
      - 8001:8001

networks:
  default:
    name: jupyterhub
